# Supabase (získáš z Supabase dashboard > Project Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Encryption key for user API keys (vygeneruj pomocí: openssl rand -base64 32)
ENCRYPTION_KEY=your_32_byte_encryption_key_base64

# Cron job secret (náhodný string pro zabezpečení cron endpointů)
CRON_SECRET=random_secret_string_for_cron_jobs

# Optional: Resend pro emaily (https://resend.com)
RESEND_API_KEY=re_xxxxxxxxxxxx
